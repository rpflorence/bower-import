#!/usr/bin/env node
var program = require('commander');
program.option('-c, --config [path]', 'your loader config json file path', 'js/config/loader.json');
program.option('-o, --outfile [path]', 'where to save the loader config file, defaults to same location as config option');
program.option('-a, --app [path]', 'the relative location to your app from your bower components', '../app');
program.option('-s, --stdout', 'send the packages array to stdout instead of writing a file', false);
require('../index')(program.parse(process.argv));

